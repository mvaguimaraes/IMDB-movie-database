<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/movie_cover"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D4D4D4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:id="@+id/movie_name"
        android:textSize="30dp"
        android:textColor="#ffffff"/>

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:id="@+id/movie_rating"
        android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/rating_image1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/star_empty"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/rating_image2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/star_empty"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/rating_image3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/star_empty"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/rating_image4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/star_empty"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/rating_image5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/star_empty"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/movie_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_below="@+id/movie_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/movie_language"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_below="@+id/movie_language"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/genres"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_below="@+id/genres"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/duration"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_below="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movie_description"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>

     </RelativeLayout>
    </ScrollView>


</LinearLayout>